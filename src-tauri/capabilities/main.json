{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "main",
  "description": "Main window capabilities",
  "windows": ["main"],
  "permissions": [
    "core:event:default",
    "core:event:allow-listen",
    "dialog:default",
    { "identifier": "dialog:allow-save" },
    "fs:default",
    { "identifier": "fs:allow-write", "scopes": ["**"] },
    { "identifier": "fs:allow-write-file", "scopes": ["**"] },
    { "identifier": "fs:allow-write-text-file", "scopes": ["**"] },
    { "identifier": "fs:allow-mkdir", "scopes": ["**"] },
    "shell:allow-open"
  ]
}


