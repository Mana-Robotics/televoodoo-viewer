{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Televoodoo Viewer",
  "version": "0.1.0",
  "identifier": "com.mana.televoodoo.viewer",
  "build": {
    "beforeDevCommand": "node ./src-tauri/scripts/prepare-tauri.js && vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "node ./src-tauri/scripts/prepare-tauri.js && vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Televoodoo Viewer",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "resources/python"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist"
    }
  },
  "plugins": {}
}


